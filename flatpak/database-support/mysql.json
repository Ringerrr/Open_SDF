{
    "name": "MySQL",
    "build-options": {
        "build-args": [ "--share=network" ]
    },
    "cleanup": ["/bin"],
    "no-autogen": true,
    "buildsystem": "simple",
    "sources": [
        {
            "type": "archive",
            "url": "https://dev.mysql.com/get/Downloads/MySQL-8.0/mysql-8.0.27.tar.gz",
            "sha256": "4a7e72f899e6f24bcd479d378edd2f32f583e687f93a26291774815d5a549b97"
        },
        {
            "type": "file",
            "path": "mysql_config"
        }
    ],
    "build-commands": [
        "cmake -DFORCE_INSOURCE_BUILD=1 -DWITHOUT_SERVER=ON -DDOWNLOAD_BOOST=1 -DWITH_BOOST=boost -DCMAKE_INSTALL_PREFIX=/app/mysql",
        "make",
        "make install",
        "cp mysql_config /app/bin"
    ]
}
