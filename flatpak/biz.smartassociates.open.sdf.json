                }
              , {
                    "type": "file"
                  , "path": "launch_etl.sh"
                }
            ],
            "post-install": [
                "mkdir -p /app/share/appdata",
                "cp open.sdf.appdata.xml /app/share/appdata",
                "mkdir -p /app/share/applications",
                "cp open.sdf.desktop /app/share/applications",
                "install -d /app/extensions"
            ]
        },
