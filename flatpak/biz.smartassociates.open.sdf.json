            "buildsystem": "simple",
            "build-commands": [
                "cp -R smart_etl /app",
                "cp -R smart_gui /app",
                "cp -R broadway_session_manager /app",
                "cp launch_flatpak.sh /app",
                "cp flatpak_env.sh /app",
